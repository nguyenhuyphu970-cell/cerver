        function fpsUnlock(cb){ if(cb.checked) showNotification('üîÑ FPS Unlock ƒë√£ k√≠ch ho·∫°t!', 'success'); }
        function noRecoil(cb){ if(cb.checked) showNotification('üéØ No Recoil ƒë√£ k√≠ch ho·∫°t!', 'success'); }
