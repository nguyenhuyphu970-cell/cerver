    <script>
        // ==================== H·ªÜ TH·ªêNG B·∫¢O M·∫¨T ====================
        const ADMIN_PASSWORD = "duc_lam_key_1201";

        // ==================== H·ªÜ TH·ªêNG KEY THEO TH·ªúI GIAN ====================
        function generateDailyKey() {
            const today = new Date();
            const dateStr = today.toISOString().slice(0,10).replace(/-/g, '');
            const random = Math.random().toString(36).substring(2, 8).toUpperCase();
            return `DRAGON-D-${dateStr}-${random}`;
        }

        function generateWeeklyKey() {
            const today = new Date();
            const startOfWeek = new Date(today.setDate(today.getDate() - today.getDay()));
            const weekStr = startOfWeek.toISOString().slice(0,10).replace(/-/g, '').slice(0,6);
            const random = Math.random().toString(36).substring(2, 10).toUpperCase();
            return `DRAGON-W-${weekStr}-${random}`;
        }

        function generateMonthlyKey() {
            const today = new Date();
            const monthStr = today.toISOString().slice(0,7).replace(/-/g, '');
            const random = Math.random().toString(36).substring(2, 12).toUpperCase();
            return `DRAGON-M-${monthStr}-${random}`;
        }

        function generateRandomKey() {
            const prefix = "DRAGON";
            const timestamp = Date.now().toString().slice(-6);
            const random = Math.random().toString(36).substring(2, 8).toUpperCase();
            return `${prefix}-${timestamp}-${random}`;
        }

        // ==================== B·∫¢NG GI√Å ====================
        const PRICING = {
            daily: { price: 10000, duration: "1 Ng√†y", name: "G√ìI NG√ÄY" },
            weekly: { price: 50000, duration: "7 Ng√†y", name: "G√ìI TU·∫¶N" },
            monthly: { price: 120000, duration: "30 Ng√†y", name: "G√ìI TH√ÅNG" }
        };

        // T·∫°o device ID
        function generateDeviceId() {
            return 'USER-' + Math.random().toString(36).substring(2, 8).toUpperCase();
        }

        const CURRENT_DEVICE_ID = generateDeviceId();

        function isAdmin() {
            return localStorage.getItem('dragon_admin') === 'true';
        }

        function loginAsAdmin() {
            const password = prompt("üîê NH·∫¨P M·∫¨T KH·∫®U ADMIN:");
            if (password === ADMIN_PASSWORD) {
                localStorage.setItem('dragon_admin', 'true');
                showNotification('‚úÖ ƒêƒÉng nh·∫≠p Admin th√†nh c√¥ng!', 'success');
                setupAdminPanel();
                return true;
            } else {
                showNotification('‚ùå M·∫≠t kh·∫©u kh√¥ng ƒë√∫ng!', 'error');
                return false;
            }
        }

        function logoutAdmin() {
            localStorage.removeItem('dragon_admin');
            showNotification('ƒê√£ ƒëƒÉng xu·∫•t Admin!', 'info');
            setupAdminPanel();
        }

        function setupAdminPanel() {
            const adminSection = document.getElementById('admin-section');
            const adminLoginBtn = document.getElementById('admin-login-btn');
            const adminLogoutBtn = document.getElementById('admin-logout-btn');
            
            if (isAdmin()) {
                adminSection.classList.add('admin-visible');
                if (adminLoginBtn) adminLoginBtn.style.display = 'none';
                if (adminLogoutBtn) adminLogoutBtn.style.display = 'inline-block';
            } else {
                adminSection.classList.remove('admin-visible');
                if (adminLoginBtn) adminLoginBtn.style.display = 'inline-block';
                if (adminLogoutBtn) adminLogoutBtn.style.display = 'none';
            }
        }

        // üî• VALIDATE KEY THEO LO·∫†I
        function validateUserKey(inputKey) {
            const key = inputKey.toUpperCase().trim();
            
            const usedKeys = JSON.parse(localStorage.getItem('used_keys') || '{}');
            
            // Ki·ªÉm tra ƒë·ªãnh d·∫°ng key
            const keyPatterns = [
                /^DRAGON-D-\d{8}-[A-Z0-9]{6}$/,  // Daily
                /^DRAGON-W-\d{6}-[A-Z0-9]{8}$/,  // Weekly  
                /^DRAGON-M-\d{6}-[A-Z0-9]{10}$/, // Monthly
                /^DRAGON-\d{6}-[A-Z0-9]{6}$/     // Random
            ];
            
            const isValidFormat = keyPatterns.some(pattern => pattern.test(key));
            if (!isValidFormat) {
                return { valid: false, message: 'Key kh√¥ng ƒë√∫ng ƒë·ªãnh d·∫°ng!' };
            }
            
            // Ki·ªÉm tra key ƒë√£ ƒë∆∞·ª£c d√πng ch∆∞a
            if (usedKeys[key]) {
                if (usedKeys[key] === CURRENT_DEVICE_ID) {
                    return { valid: true, message: 'Key h·ª£p l·ªá!' };
                } else {
                    return { valid: false, message: 'Key ƒë√£ ƒë∆∞·ª£c s·ª≠ d·ª•ng tr√™n m√°y kh√°c!' };
                }
            } else {
                usedKeys[key] = CURRENT_DEVICE_ID;
                localStorage.setItem('used_keys', JSON.stringify(usedKeys));
                return { valid: true, message: 'Key h·ª£p l·ªá! ƒê√£ k√≠ch ho·∫°t th√†nh c√¥ng.' };
            }
        }

        // T·∫°o key theo lo·∫°i
        function createNewKey(type = 'random') {
            if (!isAdmin()) {
                showNotification('‚ùå Ch·ªâ Admin m·ªõi ƒë∆∞·ª£c t·∫°o key!', 'error');
                return null;
            }

            let newKey;
            switch(type) {
                case 'daily':
                    newKey = generateDailyKey();
                    break;
                case 'weekly':
                    newKey = generateWeeklyKey();
                    break;
                case 'monthly':
                    newKey = generateMonthlyKey();
                    break;
                default:
                    newKey = generateRandomKey();
            }
            
            showNotification(`‚úÖ ƒê√£ t·∫°o key ${type} m·ªõi: ${newKey}`, 'success');
            return newKey;
        }

