            document.getElementById('pricing-section').innerHTML = pricingHTML;
        }

        function selectKeyType(type) {
            // X√≥a active class t·ª´ t·∫•t c·∫£ c√°c n√∫t
            document.querySelectorAll('.key-type-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Th√™m active class cho n√∫t ƒë∆∞·ª£c ch·ªçn
            const selectedBtn = document.querySelector(`[onclick="selectKeyType('${type}')"]`);
            if (selectedBtn) {
                selectedBtn.classList.add('active');
            }
            
            showNotification(`‚úÖ ƒê√£ ch·ªçn g√≥i ${PRICING[type].name} - ${PRICING[type].price.toLocaleString()}‚Ç´`, 'success');
        }

        // ==================== OFFSET FUNCTIONS ====================
        function cpuTurbo(cb){ if(cb.checked) showNotification('‚ö° CPU Turbo ƒë√£ k√≠ch ho·∫°t!', 'success'); }
        function ramCleaner(cb){ if(cb.checked) showNotification('üßπ RAM Cleaner ƒë√£ k√≠ch ho·∫°t!', 'success'); }
        function thermalControl(cb){ if(cb.checked) showNotification('‚ùÑÔ∏è Thermal Control ƒë√£ k√≠ch ho·∫°t!', 'success'); }
