        // ==================== C√ÅC H√ÄM H·ªñ TR·ª¢ ====================
        function createParticles() {
            const body = document.body;
            for (let i = 0; i < 20; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                particle.style.left = Math.random() * 100 + 'vw';
                particle.style.top = Math.random() * 100 + 'vh';
                particle.style.width = (Math.random() * 3 + 2) + 'px';
                particle.style.height = particle.style.width;
                particle.style.animationDuration = (Math.random() * 15 + 10) + 's';
                particle.style.animationDelay = Math.random() * 5 + 's';
                body.appendChild(particle);
            }
        }
        
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => notification.classList.add('show'), 100);
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => document.body.removeChild(notification), 300);
            }, 4000);
        }
        
        function validateLogin() {
            const keyInput = document.getElementById('login-key');
            const key = keyInput.value.trim();
            
            if (!key) {
                showNotification('‚ùå Vui l√≤ng nh·∫≠p key!', 'error');
                return;
            }
            
            const result = validateUserKey(key);
            
            if (result.valid) {
                showNotification('‚úÖ ' + result.message, 'success');
                localStorage.setItem('dragon_logged_in', 'true');
                localStorage.setItem('registered_key', key);
                localStorage.setItem('user_device_id', CURRENT_DEVICE_ID);
                
                setTimeout(() => {
                    document.getElementById('login-page').style.display = 'none';
                    document.getElementById('main-content').style.display = 'block';
                    document.title = 'DRAGON APK üêâ - ƒê√£ K√≠ch Ho·∫°t';
                    updateDeviceInfo();
                    unlockAllFeatures();
                }, 1000);
            } else {
                showNotification('‚ùå ' + result.message, 'error');
                keyInput.value = '';
                keyInput.focus();
            }
        }
        
        function checkLoginStatus() {
            if (localStorage.getItem('dragon_logged_in') === 'true') {
                document.getElementById('login-page').style.display = 'none';
                document.getElementById('main-content').style.display = 'block';
                updateDeviceInfo();
                unlockAllFeatures();
            }
        }
        
        function logout() {
            localStorage.removeItem('dragon_logged_in');
            document.getElementById('main-content').style.display = 'none';
            document.getElementById('login-page').style.display = 'flex';
            document.title = 'ƒêƒÉng Nh·∫≠p - DRAGON APK üêâ';
            showNotification('ƒê√£ ƒëƒÉng xu·∫•t th√†nh c√¥ng!', 'success');
        }

        function unlockAllFeatures() {
            document.querySelectorAll('.feature-item').forEach(feature => {
                feature.classList.remove('feature-locked');
                const toggle = feature.querySelector('.feature-toggle');
                toggle.style.pointerEvents = 'auto';
                toggle.style.opacity = '1';
            });
        }

        function updateDeviceInfo() {
            const deviceInfo = document.getElementById('device-info');
            const registeredKey = localStorage.getItem('registered_key') || 'Ch∆∞a ƒëƒÉng k√Ω';
            deviceInfo.innerHTML = `
                <strong>User ID:</strong> ${CURRENT_DEVICE_ID}<br>
                <strong>Key ƒë√£ ƒëƒÉng k√Ω:</strong> ${registeredKey}<br>
                <strong style="color: #10b981;">‚úì T·∫•t c·∫£ t√≠nh nƒÉng ƒë√£ m·ªü kh√≥a</strong>
                <span class="one-device-badge">1 KEY = 1 M√ÅY</span>
            `;
        }

        function showCurrentDeviceKey(type = 'random') {
            const currentKey = createNewKey(type);
            if (currentKey) {
                document.getElementById('key-display').innerHTML = 
                    `<div class="key-display">${currentKey}</div>`;
            }
        }

        function showAllKeys() {
            if (!isAdmin()) {
                showNotification('‚ùå Ch·ªâ Admin m·ªõi ƒë∆∞·ª£c xem danh s√°ch key!', 'error');
                return;
            }

            const usedKeys = JSON.parse(localStorage.getItem('used_keys') || '{}');
            const keysList = document.getElementById('keys-list');
            
            let html = '<h4>üìã Danh s√°ch Key ƒê√£ T·∫°o:</h4>';
            if (Object.keys(usedKeys).length === 0) {
                html += '<p>Ch∆∞a c√≥ key n√†o ƒë∆∞·ª£c t·∫°o.</p>';
            } else {
                Object.keys(usedKeys).forEach((key, index) => {
                    const isCurrentDevice = usedKeys[key] === CURRENT_DEVICE_ID;
                    html += `
                        <div class="key-display" style="margin: 10px 0; ${isCurrentDevice ? 'border: 2px solid #10b981; background: rgba(16,185,129,0.1)' : 'border: 2px solid #ef4444; background: rgba(239,68,68,0.1)'}">
                            <strong>Key ${index + 1}:</strong> ${key}<br>
                            <small>Tr·∫°ng th√°i: ${isCurrentDevice ? '‚úÖ ƒêang d√πng tr√™n m√°y n√†y' : '‚ùå ƒê√£ d√πng tr√™n m√°y kh√°c'}</small><br>
                            <small>M√°y ƒë√£ d√πng: ${usedKeys[key]}</small><br>
                        </div>
                    `;
                });
            }
            keysList.innerHTML = html;
        }
        
        // ==================== INIT ====================
        window.addEventListener('DOMContentLoaded', function() {
            createParticles();
            checkLoginStatus();
            setupAdminPanel();
            showPricingTable();
            
            document.getElementById('login-form').addEventListener('submit', function(e) {
                e.preventDefault();
                validateLogin();
            });
            
            document.getElementById('login-key').focus();
        });

        function toggleFeature(featureId) {
            const feature = document.getElementById(featureId);
            const toggle = feature.querySelector('.feature-toggle');
            
            if (toggle.classList.contains('active')) {
                toggle.classList.remove('active');
                feature.classList.remove('active');
                showNotification(`ƒê√£ t·∫Øt ${feature.querySelector('.feature-name').textContent}`, 'info');
            } else {
                toggle.classList.add('active');
                feature.classList.add('active');
                showNotification(`ƒê√£ b·∫≠t ${feature.querySelector('.feature-name').textContent}`, 'success');
            }
        }

